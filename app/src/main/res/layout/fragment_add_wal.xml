<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWalFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ccddff">


        <TextView
            android:id="@+id/textViewCreateWallet"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="create your first wallet"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/WalletName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Wallet Name" />

        <EditText
            android:id="@+id/editTextWalName"
            android:layout_width="348dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=" " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="inital balance" />
        <EditText
            android:id="@+id/editTextWalName2"
            android:layout_width="348dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=" " />

        <TextView
            android:id="@+id/textViewCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Currency" />


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="348dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:entries="@array/currency_array"
            android:prompt="@string/currency" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="207dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="220dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonADD"
        android:layout_width="103dp"
        android:layout_height="61dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="160dp"
        android:text="Add Wallet" />

</FrameLayout>